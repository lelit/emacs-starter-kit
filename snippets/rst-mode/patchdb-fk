.. script:: FK ${1:schemasrc}.${2:tablenamesrc}.${3:fieldnamesrc}âžœ${4:schemadst}.${5:tablenamedst}
   :description: Foreign key di \`\`$1.$2.$3\`\`
                 verso \`\`$4.$5.${6:fieldnamedst}\`\`
   :depends:
      - Tabella $1.$2
      - Tabella $4.$5

   ALTER TABLE $1.$2
     ADD CONSTRAINT fk_$1_$2_$3
     FOREIGN KEY ($3)
     REFERENCES $4.$5 ($6)
